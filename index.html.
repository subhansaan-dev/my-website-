    <script>
        const noButton = document.getElementById('noButton');
        const yesButton = document.getElementById('yesButton');
        const response = document.getElementById('response');
        const backButton = document.getElementById('backButton');
        const buttonsDiv = document.querySelector('.buttons');
        const loveLetter = document.getElementById('loveLetter');
        const nextButton = document.getElementById('nextButton');
        const nextPage = document.getElementById('nextPage');
        const messages = [
            "Mat kar Lala, mat kar üòè",
            "Lala, pachtayegi üòú",
            "Pagal wagal ho gayi hai kya? ü§≠",
            "üôÇ"
        ];
        let clickCount = 0;

        noButton.addEventListener('click', () => {
            clickCount++;
            if (clickCount < messages.length) {
                noButton.textContent = messages[clickCount - 1];
                // Move the button randomly
                const randomX = Math.random() * 200 - 100;
                const randomY = Math.random() * 200 - 100;
                noButton.style.transform = `translate(${randomX}px, ${randomY}px)`;
            } else {
                noButton.textContent = messages[messages.length - 1];
                noButton.disabled = true;
            }
        });

        yesButton.addEventListener('click', () => {
            buttonsDiv.style.display = 'none';
            response.textContent = "Arey pata tha, main hoon hi itna khaas üòå!";
            response.style.display = 'block';
            loveLetter.style.display = 'block';
        });

        nextButton.addEventListener('click', () => {
            loveLetter.style.display = 'none';
            nextPage.style.display = 'block';
            backButton.style.display = 'block';
        });

        backButton.addEventListener('click', () => {
            // Reset everything
            buttonsDiv.style.display = 'block';
            response.style.display = 'none';
            loveLetter.style.display = 'none';
            nextPage.style.display = 'none';
            backButton.style.display = 'none';
            noButton.textContent = 'No';
            noButton.disabled = false;
            noButton.style.transform = 'translate(0px, 0px)';
            clickCount = 0;
        });
    </script>
